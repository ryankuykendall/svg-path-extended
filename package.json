{
  "name": "svg-path-extended",
  "version": "0.1.0",
  "description": "Extended SVG path syntax with variables, expressions, control flow, and functions",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "browser": "./dist/index.global.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "svg-path-extended": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "build:docs": "node scripts/build-docs.js",
    "build:blog": "node scripts/build-blog.js",
    "new:blog": "node scripts/new-blog-post.js",
    "build:website": "npm run build && npm run build:docs && npm run build:blog && node scripts/build-website.js",
    "dev": "tsup --watch",
    "dev:website": "npm run build:website && npx wrangler pages dev public --port 3000",
    "website:admin-token": "npm run build:website && node scripts/rotate-admin-token.js",
    "test": "vitest",
    "test:run": "vitest run",
    "cli": "tsx src/cli.ts"
  },
  "keywords": [
    "svg",
    "path",
    "preprocessor",
    "dsl"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/parsimmon": "^1.10.9",
    "@vitest/coverage-v8": "^1.6.1",
    "highlight.js": "^11.11.1",
    "marked": "^15.0.0",
    "marked-highlight": "^2.2.3",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "wrangler": "^4.61.0"
  },
  "dependencies": {
    "parsimmon": "^1.18.1"
  }
}
